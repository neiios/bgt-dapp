{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "prettier"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "ignorePatterns": ["*.config.cjs"],
  "rules": { "prettier/prettier": 2, "no-unused-vars": "warn" },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
